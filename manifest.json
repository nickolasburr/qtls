{
  "manifest_version": 2,
  "name": "qTLS",
  "short_name": "QTLS",
  "version": "1.0.0",
  "description": "Examine SSL certificates and connection metrics on the websites you visit.",
  "background": {
    "scripts": [ "js/background.js" ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/green-box-48x48.png",
    "default_popup": "metrics.html",
    "default_title": "qTLS - Click for details"
  },
  "permissions": [ "debugger", "tabs" ]
}
