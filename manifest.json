{
  "manifest_version": 2,
  "name": "qTLS",
  "short_name": "QTLS",
  "version": "1.0.1",
  "description": "Examine SSL certificates and connection metrics on the websites you visit.",
  "background": {
    "scripts": [ "js/background.js" ],
    "persistent": true
  },
  "browser_action": {
    "default_icon":  "icons/data-exchange-48x48.png",
    "default_popup": "metrics.html",
    "default_title": "qTLS - click for details"
  },
  "icons": {
    "16":  "icons/data-exchange-16x16.png",
    "48":  "icons/data-exchange-48x48.png",
    "128": "icons/data-exchange-128x128.png"
  },
  "permissions": [
    "debugger", "tabs"
  ]
}
